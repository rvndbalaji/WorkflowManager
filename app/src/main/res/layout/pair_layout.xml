<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/full_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:background="@drawable/white_round"
    android:padding="5dp">

    <TextView
        android:id="@+id/pair_key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura_medium"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Pair Key"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/pair_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:autoLink="web"
        android:fontFamily="@font/roboto"
        android:gravity="center_vertical"
        android:linksClickable="true"
        android:padding="5dp"
        android:singleLine="false"
        android:text="Pair Value : This is a very lenghty statement that may or may not overflow the boundaries set by the border of the mobile phone"
        android:textColor="#000000"
        android:textSize="12dp"/>

</LinearLayout>